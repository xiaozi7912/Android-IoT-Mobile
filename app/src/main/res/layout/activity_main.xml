<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="360dp"
            android:text="This is android things phone"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/main_show_player_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Show PlayerActivity" />

        <com.xiaozi.framework.libs.view.QRCodeView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:content="1234567890" />

        <com.xiaozi.framework.libs.view.DevInfoView
            android:id="@+id/main_dev_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="main_dev_info_text"
            android:textColor="#ff0000"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>